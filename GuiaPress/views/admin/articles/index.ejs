<%- include ('../../partials/header.ejs') %>

<%- include ('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h2>Artigo</h2>
    <a href="/admin/articles/new" class="btn btn-success"> Nova Artigo</a>
    <hr>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titulo</th>
                <th>Slug</th>
                <th>Category</th>
                <th>Açoes</th>
            </tr>
        </thead>
        <tbody>
            <% articles.forEach(article => { %>
                <tr>
                    <th><%=article.id%></th>
                    <th><%=article.title%></th>
                    <th><%=article.slug%></th>
                    <th><%=article.category.title%></th>
                    <th>
                        <a href="/admin/articles/edit/<%=article.id%>" class="btn btn-warning">Editar</a href="">

                        <form method="POST" action="/articles/delete" style="display: inline;" onsubmit=" return confirmarDelecao(event, this)">
                            <input type="hidden" name="id" value="<%=article.id%>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th>
                </tr>
                <%})%>
            
        </tbody>
    </table>
</div>


<%- include ('../../partials/footer.ejs') %>

<script>
    const confirmarDelecao= (event, form) => {
        event.preventDefault();
         const decision = confirm("você quer deletar esse artigo ?")
         if(decision) {
            form.submit();
         }
    }
</script>